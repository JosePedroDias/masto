{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": false, // DEV
        "noUnusedParameters": false, // DEV
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts"
    ]
}
